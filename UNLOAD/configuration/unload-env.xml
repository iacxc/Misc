<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property> 
        <name>base.dir</name>
        <value>/var/run/unload</value> 
        <display-name>Base dir</display-name>
        <description>Base stage directory name</description> 
        <editable-only-at-install>true</editable-only-at-install>
    </property> 

    <property> 
        <name>unload_user</name>
        <display-name>Unload User</display-name>
        <value>sqdev1</value> 
        <property-type>USER</property-type>
        <description>User to run the UNLOAD as</description> 
        <value-attributes>
            <type>user</type>
            <overridable>false</overridable>
        </value-attributes>
        <editable-only-at-install>true</editable-only-at-install>
    </property> 

    <property> 
        <name>user_group</name>
        <display-name>Unload User Group</display-name>
        <value>hadoop</value> 
        <property-type>GROUP</property-type>
        <description>Group of the user to run the UNLOAD as</description> 
        <value-attributes>
            <type>user</type>
            <overridable>false</overridable>
        </value-attributes>
        <editable-only-at-install>true</editable-only-at-install>
    </property> 

</configuration>
