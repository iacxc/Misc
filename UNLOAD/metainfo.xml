<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>UNLOAD</name>
            <displayName>Unload Service</displayName>
            <comment>Unload Service</comment>
            <version>0.1.0</version>

            <components>
                <component>
                    <name>UNLOADCRON</name>
                    <displayName>Unload</displayName>
                    <category>SLAVE</category>
                    <cardinality>0+</cardinality>
                    <commandScript>
                         <script>scripts/unload.py</script>
                         <scriptType>PYTHON</scriptType>
                         <timeout>5000</timeout>
                    </commandScript>

                    <configFiles>
                        <configFile>
                            <type>xml</type>
                            <fileName>unload-env.xml</fileName>
                            <dictionaryName>unload-env</dictionaryName>
                        </configFile>
                    </configFiles>

                    <logs>
                        <log>
                            <logId>unload</logId>
                            <primary>true</primary>
                        </log>
                    </logs>
                </component>
           </components>

            <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                </osSpecific>
            </osSpecifics>

            <commandScript>
                <script>scripts/service_check.py</script>
                <scriptType>PYTHON</scriptType>
                <timeout>300</timeout>
            </commandScript>

            <configuration-dependencies>
                <config-type>unload-env</config-type>
            </configuration-dependencies>

       </service>
   </services>
</metainfo>
